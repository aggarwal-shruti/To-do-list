<%- include('./partials/header.ejs') %>

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">To do list App</a>
    </div>
  </nav>


<div class="container mt-5">   
    <form action = "/add/todo" method="post" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Task">
        <input type="submit" value ="Add Task" class="btn btn-md btn-primary mx-2">

    </form>

    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
            <li class="list-group-item"><%= todos.todo %><a href="/delete/todo/<%= todos._id %>" 
                class="btn btn-danger btn-sm mx-2">Delete</a></li>
       <% }) %>
        
        
      </ul>

</div>





